<Window x:Class="InstantMessaging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstantMessaging"
        mc:Ignorable="d"
        Background="#1e2124"
        ResizeMode="CanResizeWithGrip"
        Title="ChatApp" Height="650" Width="1200" MinHeight="325" MinWidth="600">

    <Window.Resources>
        <BitmapImage x:Key="DefaultUserImage" UriSource="/Icons/user.png"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Toolbar" Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2" Background="#1e2124" VerticalAlignment="Center" Margin="5 0 0 0" Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Foreground="Black" Click="Menu_Exit">
                    <MenuItem.Icon>
                        <Image Source="./Icons/close.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Contacts">
                <MenuItem Header="_Add" Foreground="Black">
                    <MenuItem.Icon>
                        <Image Source="./Icons/add.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete" Foreground="Black">
                    <MenuItem.Icon>
                        <Image Source="./Icons/delete.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Edit" Foreground="Black">
                    <MenuItem.Icon>
                        <Image Source="./Icons/edit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Settings" Foreground="Black">
                    <MenuItem.Icon>
                        <Image Source="./Icons/settings.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Background="#282b30">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="2"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Contacts" FontSize="22" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>

            <Border Grid.Row="1" Background="#1e2124" VerticalAlignment="Bottom" Height="2"/>
            
            <ListView Grid.Row="2" BorderThickness="0"
                      Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBlock}, Path=Background}"
                      Foreground="White"
                      Name="LV_Contacts"
                      ItemsSource="{Binding Contacts}"
                      ItemContainerStyle="{StaticResource ContactInfo}"
                      MouseDoubleClick="LV_Contacts_DoubleClick"
                      SelectionChanged="LV_Contacts_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}"/>

            <DockPanel Grid.Row="3" VerticalAlignment="Bottom" Background="#1e2124" Height="50">
                <Image DockPanel.Dock="Left" Margin="5 5 5 5" 
                   Source="/Icons/user.png"/>
                <Label Margin="0 5 5 5" DockPanel.Dock="Right" Content="Username" HorizontalAlignment="Right" VerticalAlignment="Center"
                   FontWeight="SemiBold" Foreground="Gray" FontSize="20"/>
            </DockPanel>
        </Grid>

        <Grid Name="CurrentlySelected" DataContext="{Binding G_SelectedContact}" Grid.Row="1" Grid.Column="1" Background="#36393e">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="2"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0 5 0 5" Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBlock}, Path=Background}">
                <Image Margin="100 2 5 2"
                   Source="{Binding ImageSource, FallbackValue={StaticResource DefaultUserImage}, TargetNullValue={StaticResource DefaultUserImage}}"/>
                <TextBlock Margin="10 0 100 0" VerticalAlignment="Center"
                   FontWeight="SemiBold" Foreground="Gray" FontSize="20" Text="{Binding Username, FallbackValue='Username'}"/>
            </DockPanel>

            <Border Grid.Row="1" Background="#282b30" VerticalAlignment="Bottom" Height="2"/>

            <ListView Grid.Row="2" BorderThickness="0"
                      Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBlock}, Path=Background}"
                      Foreground="White"
                      Name="LV_ChatMessages"
                      ItemsSource="{Binding Messages}"
                      ItemContainerStyle="{StaticResource ChatMessage}"
                      d:ItemsSource="{d:SampleData ItemCount=5}"/>

            <Grid Grid.Row="3" Background="#36393e">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Grid.ColumnSpan="2" FontSize="14" Text="test" TextWrapping="Wrap" Height="50" Margin="10 0 105 0" Foreground="White" Background="#424549">
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 10 10">
                    <Button BorderThickness="0" Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBlock}, Path=Background}">
                        <Image Width="25" Height="25" Margin="2 2 10 2" Source="/Icons/emoji.png"/>
                    </Button>
                    <Button BorderThickness="0" Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBlock}, Path=Background}">
                        <Image Width="25" Height="25" Margin="2 2 5 2" Source="/Icons/send.png"/>
                    </Button>
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</Window>
